{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/contact",
      "dest": "/api/contact.php"
    },
    {
      "src": "/testimonials", 
      "dest": "/api/testimonials.php"
    },
    {
      "src": "/admin",
      "dest": "/api/admin.php"
    },
    {
      "src": "/setup",
      "dest": "/api/setup.php"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/public/assets/$1"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
