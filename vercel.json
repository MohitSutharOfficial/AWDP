{
  "version": 2,
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.0"
    }
  },
  "routes": [
    {
      "src": "/contact",
      "dest": "/api/contact.php"
    },
    {
      "src": "/testimonials", 
      "dest": "/api/testimonials.php"
    },
    {
      "src": "/admin",
      "dest": "/api/admin.php"
    },
    {
      "src": "/setup",
      "dest": "/api/setup.php"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
