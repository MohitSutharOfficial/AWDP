{
  "version": 2,
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "routes": [
    {
      "src": "/contact",
      "dest": "/api/contact.php",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/testimonials", 
      "dest": "/api/testimonials.php",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/admin",
      "dest": "/api/admin.php",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/setup",
      "dest": "/api/setup.php",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.+)",
      "dest": "/public/$1"
    }
  ]
}
